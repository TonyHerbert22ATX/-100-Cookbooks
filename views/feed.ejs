<%- include('partials/header') -%>
<div class="navbar bg-base-100">
  <div class="flex-1">
    <a href ='#' class="btn btn-ghost normal-case text-xl"><p><strong></strong>Feeling Lucky? Want to try a Random Recipe?</p></a>
  </div>
  <div class="flex-none gap-1">
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn btn-ghost btn-circle avatar">
        <div class="w-100 rounded-full">
          <img type="image/png" src="/imgs/chef2.png" />
        </div>
      </label>
      <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52">
        <li>
          <a href='/profile' class="justify-between">
            Profile
            <span class="badge">New</span>
          </a>
        </li>
        <li><a>Settings</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </div>
        <div class="form-control">
      <input type="text" placeholder="Search" class="input input-bordered" />
    </div>
  </div>
</div>

<div class="container">
    <div class="row justify-content-center mt-5">
      <ul class="row list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
<div class="card w-96 bg-base-100 shadow-xl">
  <figure><a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>" alt="picture of <%=posts[i].title%>">
            </a></figure>
  <div class="card-body">
    <h2 class="card-title">
      <%=posts[i].title%>
      <div class="badge badge-secondary">NEW</div>
    </h2>
    <p><%=posts[i].caption%></p>
    <div class="card-actions justify-end">
      <div class="badge badge-outline"><%=posts[i].meatVeggie%></div>
      <div class="badge badge-outline"><%=posts[i].cuisine%></div> 
      <div class="badge badge-outline"><%=posts[i].time%></div>
      <div class="badge badge-outline"><%=user.userName%></div>
    </div>
  </div>
</div>
        <% } %>
        </ul>
    </div>
  </div>  

<%- include('partials/footer') -%>